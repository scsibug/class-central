<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>Class Central - Summary of Stanford's free online courses</title>
        <meta name="description" content="Stanford is offering more than a dozen free online courses in fields like Computer Science, Anatomy, Medicine, Civil and Electrical engineering. Class Central provides a single page summary of all these courses."/>
        <meta name="author" content="Dhawal Shah">

        <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
        <!--[if lt IE 9]>
          <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->

        <!-- Le styles -->  
        {% stylesheets
        '@ClassCentralSiteBundle/Resources/public/css/*'
        %}
        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}

        {% javascripts
        '@ClassCentralSiteBundle/Resources/public/js/jquery-1.7.min.js'
        '@ClassCentralSiteBundle/Resources/public/js/jquery.prettyPhoto.js'
        '@ClassCentralSiteBundle/Resources/public/js/jquery.tablesorter.min.js'
        %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}

        <script type="text/javascript">
            {% block customJS %}
            {% endblock %}
        </script>


        {% if app.environment == 'prod' and home is defined %}
        <!-- Including google analytics. The parameter ganalytics_id must be set in parameters.ini -->
        <script type="text/javascript">

            var _gaq = _gaq || [];
            _gaq.push(['_setAccount', '{{ ganalytics_id }}']);
            _gaq.push(['_trackPageview']);

            (function() {
                var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
                ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
                var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
            })();

        </script>
        {% endif %}

    </head>

    <body>        
        <div class="topbar">
            <div class="fill">
                <div class="container">
                    <a class="brand" href="#">Class Central</a>
                    <ul class="nav">
                        <li class="active"><a href="#">Home</a></li>           
                    </ul>
                    {% if home is defined %}
                    <ul class="nav secondary-nav">
                        <li>
                            <div id='addThisButton'>
                                <!-- AddThis Button BEGIN -->
                                <div class="addthis_toolbox addthis_default_style ">
                                    <a class="addthis_button_facebook_like" fb:like:layout="button_count"></a>
                                    <a class="addthis_button_tweet"></a>
                                    <a class="addthis_button_google_plusone" g:plusone:size="medium"></a>
                                </div>
                                <script type="text/javascript" src="http://s7.addthis.com/js/250/addthis_widget.js#pubid={{ addthis_pubid }}"></script>
                                <!-- AddThis Button END -->
                            </div>                          
                        </li>
                    </ul>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="container">

            {%  block content %}   
            <hr /><hr />
            {% endblock %}  
            <footer>
                {% block footer %}
                <p><a href="mailto:contact@class-central.com">contact@class-central.com</a> |                                        
                    <a href="https://github.com/dhawalhshah/class-central"
                       class="gitforked-button gitforked-forks gitforked-watchers">Fork</a>

                </p>
                {% endblock %}
            </footer>

        </div> <!-- /container -->
        <script src="http://gitforked.com/api/1.1/button.js" type="text/javascript"></script>
        <!-- Jquery Lightbox plugin -->
        <script type="text/javascript" charset="utf-8">
            $(document).ready(function(){
                $("a[rel^='intro']").prettyPhoto({
                    social_tools : false,
                    show_title: false,
                    default_width: 640,
                    default_height:480
                });
            });
        </script>
    </body>
</html>
